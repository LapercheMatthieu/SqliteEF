<UserControl x:Class="MatthL.SqliteEF.Views.Databases.DetailViews.DatabaseDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatthL.SqliteEF.Views.Databases.DetailViews"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="400" MaxHeight="400"  d:DesignWidth="400"
             Height="500"
             x:Name="SelectorRoot" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Mechatro.WPF.UI.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <boolean:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <boolean:BoolToInvisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        </ResourceDictionary>
    </UserControl.Resources>


    <Grid d:Background="White">

        <!--#region MAsterDatabase-->
        <Border Grid.Row="0" BorderBrush="#FFEC2121" BorderThickness="2" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <!--Titre -->
                <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsOk}"
                                    Value="True">
                                    <Setter
                                        Property="Background"
                                        Value="LightGreen" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding IsOk}"
                                    Value="False">
                                    <Setter
                                        Property="Background"
                                        Value="LightCoral" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label
                        Content="{Binding GenericDatabaseName}"
                        d:Content="Local DB"
                        Margin="0"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontWeight="Bold" Style="{StaticResource MediumTitleLabel}">
                    </Label>
                </Border>

                <!-- INFORMATIONS -->
                <!-- if no connection -->
                <Grid Grid.Row="1" Visibility="{Binding IsOk, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                      d:Visibility="Collapsed">
                    <Label Content="Pas de database sélectionnée" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DangerLabel}"/>
                </Grid>
                <!-- if connections -->
                <Grid Grid.Row="1" Visibility="{Binding IsOk, Converter={StaticResource BooleanToVisibilityConverter}}"
                      d:Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <!--Name-->
                    <Button Padding="2" Margin="5"  Grid.Column="0" Style="{StaticResource OutlineButton}"
                            Command="{Binding ShowInformationsCommand}">
                        <Viewbox  >
                            <iconPacks:PackIconMaterial Kind="Rename" />
                        </Viewbox>
                    </Button>
                    <Label Content="{Binding Name}" 
                           d:Content="fichier.db" 
                           Grid.Row="0"
                           Grid.Column="1" VerticalAlignment="Center"/>
                    <!--Path-->
                    <Button Grid.Row="1" Margin="5" 
                            Padding="2" Grid.Column="0" 
                            Style="{StaticResource OutlineButton}" 
                            Command="{Binding OpenFolderCommand}"> 
                        <Viewbox  >
                            <iconPacks:PackIconOcticons Kind="FileDirectory16" />
                        </Viewbox>
                    </Button>
                    <Label Content="{Binding Folder}" 
                           d:Content="c://machin" 
                           Grid.Row="1"
                           Grid.Column="1" VerticalAlignment="Center"/>
                    <!--Size-->
                    <Viewbox Margin="5" Grid.Row="2" Grid.Column="0">
                        <iconPacks:PackIconLucide Kind="Weight" />
                    </Viewbox>
                    <Label Content="{Binding SizeString}" 
                           d:Content="2 ko" 
                           Grid.Row="2"
                           Grid.Column="1" VerticalAlignment="Center"/>
                    <!--Creation Date-->
                    <Viewbox Margin="5" Grid.Row="3" Grid.Column="0">
                        <iconPacks:PackIconLucide Kind="CalendarPlus" />
                    </Viewbox>
                    <Label Content="{Binding Name}" 
                           d:Content="fichier.db" 
                           Grid.Row="3"
                           Grid.Column="1" VerticalAlignment="Center"/>
                    <!--Update date-->
                    <Viewbox Margin="5" Grid.Row="4" Grid.Column="0">
                        <iconPacks:PackIconPhosphorIcons Kind="CalendarPlus" />
                    </Viewbox>
                    <Label Content="{Binding Name}" 
                           d:Content="fichier.db" 
                           Grid.Row="4"
                           Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <UniformGrid Rows="1">
                        <!--Button to select DB-->
                        <Button HorizontalContentAlignment="Stretch" 
                                VerticalContentAlignment="Stretch"
                                Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding SelectDatabaseCommand}"
                                Margin="10"> 
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Viewbox Margin="5">
                                    <iconPacks:PackIconVaadinIcons Kind="FileSearch" />
                                </Viewbox>
                                <Label Grid.Row="1" Content="Chercher" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>
                        </Button>
                        <!--Button to Create DB-->
                        <Button HorizontalContentAlignment="Stretch" 
                                VerticalContentAlignment="Stretch"
                                Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding CreateDatabaseCommand}"
                                Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Viewbox Margin="5">
                                    <iconPacks:PackIconModern Kind="NewspaperCreate" />
                                </Viewbox>
                                <Label Grid.Row="1" Content="Créer" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>
                        </Button>
                        <!--Button to Delete DB-->
                        <Button HorizontalContentAlignment="Stretch" 
                                VerticalContentAlignment="Stretch"
                                Style="{StaticResource RoundedButtonStyle}"
                                Command="{Binding DeleteDatabaseCommand}"
                                Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Viewbox Margin="5">
                                    <iconPacks:PackIconModern Kind="Delete" />
                                </Viewbox>
                                <Label Grid.Row="1" Content="Supprimer" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>
                        </Button>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Border>

        <!--#endregion-->
    </Grid>
</UserControl>
