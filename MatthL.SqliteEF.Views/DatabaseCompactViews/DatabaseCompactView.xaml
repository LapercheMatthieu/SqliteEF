<UserControl x:Class="MatthL.SqliteEF.Views.DatabaseCompactViews.DatabaseCompactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatthL.SqliteEF.Views.DatabaseCompactViews"
              xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:MatthL.SqliteEF.Views.Converters" xmlns:converters1="clr-namespace:MatthL.WPF.Essentials.Converters;assembly=MatthL.WPF.Essentials.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300"
             Height="60">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ConnectionStateToColorConverter x:Key="StateToColorConverter"/>
            <converters:ConnectionStateToIconConverter x:Key="StateToIconConverter"/>
            <converters:HealthStatusToColorConverter x:Key="HealthToColorConverter"/>
            <converters1:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderThickness="1" 
            BorderBrush="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}"
            CornerRadius="8"
            Background="#F5F5F5"
            Padding="8"
            Cursor="Hand">
        <Border.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding ShowDetailsCommand}"/>
        </Border.InputBindings>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icône principale avec état de connexion -->
            <Grid Grid.Column="0" Width="44" Height="44">
                <!-- Fond coloré selon l'état -->
                <Ellipse Fill="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}" 
                         Opacity="0.2"/>

                <!-- Icône de base de données -->
                <iconPacks:PackIconMaterial 
                    Kind="{Binding ConnectionState, Converter={StaticResource StateToIconConverter}}"
                    Width="28" Height="28"
                    Foreground="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Grid>

            <!-- Nom de la base de données -->
            <StackPanel Grid.Column="1" 
                        Margin="12,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding DatabaseName}" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"/>

                <TextBlock FontSize="11" 
                           Foreground="#666666"
                           Margin="0,2,0,0">
                    <Run Text="{Binding ConnectionState, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Indicateurs d'activité -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0">

                <!-- Indicateur de santé -->
                <Ellipse Width="12" Height="12"
                         Fill="{Binding HealthStatus, Converter={StaticResource HealthToColorConverter}}"
                         Margin="0,0,8,0"
                         ToolTip="État de santé de la base de données"/>

                <!-- Indicateur de lecture (animé) -->
                <Grid Width="20" Height="20"
                      Visibility="{Binding IsReading, Converter={StaticResource BoolToVisConverter}}"
                      ToolTip="Lecture en cours">
                    <iconPacks:PackIconMaterial Kind="Read" 
                                                Width="16" Height="16"
                                                Foreground="#2196F3">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <RotateTransform x:Name="ReadRotation" CenterX="8" CenterY="8"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                        <iconPacks:PackIconMaterial.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="ReadRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </iconPacks:PackIconMaterial.Triggers>
                    </iconPacks:PackIconMaterial>

                    <!-- Badge avec le nombre de readers actifs -->
                    <Border Background="#2196F3"
                            CornerRadius="8"
                            Padding="3,1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-4,-4,0"
                            Visibility="{Binding IsReading, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="{Binding ActiveReaders}"
                                   Foreground="White"
                                   FontSize="8"
                                   FontWeight="Bold"/>
                    </Border>
                </Grid>

                <!-- Indicateur d'écriture (animé) -->
                <Grid Width="20" Height="20"
                      Margin="4,0,0,0"
                      Visibility="{Binding IsWriting, Converter={StaticResource BoolToVisConverter}}"
                      ToolTip="Écriture en cours">
                    <iconPacks:PackIconMaterial Kind="Pencil" 
                                                Width="16" Height="16"
                                                Foreground="#FF9800">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <TranslateTransform x:Name="WriteTranslation"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                        <iconPacks:PackIconMaterial.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="WriteTranslation"
                                                       Storyboard.TargetProperty="Y"
                                                       From="0" To="-3" Duration="0:0:0.5"
                                                       AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </iconPacks:PackIconMaterial.Triggers>
                    </iconPacks:PackIconMaterial>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
