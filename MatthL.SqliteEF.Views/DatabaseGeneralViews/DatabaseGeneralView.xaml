<UserControl x:Class="MatthL.SqliteEF.Views.DatabaseGeneralViews.DatabaseGeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatthL.SqliteEF.Views.DatabaseGeneralViews"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:MatthL.SqliteEF.Views.Converters" 
             xmlns:converters1="clr-namespace:MatthL.WPF.Essentials.Converters;assembly=MatthL.WPF.Essentials.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             MinWidth="350">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ConnectionStateToColorConverter x:Key="StateToColorConverter"/>
            <converters:ConnectionStateToIconConverter x:Key="StateToIconConverter"/>
            <converters:HealthStatusToColorConverter x:Key="HealthToColorConverter"/>
            <converters1:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters1:BoolToInvisibilityConverter x:Key="InverseBoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderThickness="2" 
            BorderBrush="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}"
            CornerRadius="12"
            Background="White"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête avec état -->
            <Border Grid.Row="0" 
                    Background="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}"
                    CornerRadius="8"
                    Padding="12"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <iconPacks:PackIconMaterial Kind="Database" 
                                                Width="32" Height="32"
                                                Foreground="White"
                                                VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding DatabaseName}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding ConnectionState}" 
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.9"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Zone d'informations -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,16">
                <StackPanel>
                    <!-- Quand la DB n'est pas connectée -->
                    <Border Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisConverter}}"
                            Background="#FFF3E0"
                            BorderBrush="#FF9800"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <iconPacks:PackIconMaterial Kind="AlertCircle"
                                                        Width="48" Height="48"
                                                        Foreground="#FF9800"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,0,12"/>
                            <TextBlock Text="Aucune base de données connectée"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Foreground="#E65100"/>
                            <TextBlock Text="Sélectionnez une base existante ou créez-en une nouvelle"
                                       FontSize="12"
                                       TextAlignment="Center"
                                       Foreground="#F57C00"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Quand la DB est connectée -->
                    <StackPanel Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisConverter}}">
                        <!-- Chemin complet -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Kind="FolderOpen"
                                                        Width="24" Height="24"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Chemin" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding FullPath}" 
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding FullPath}"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Command="{Binding OpenFolderCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Padding="8"
                                    ToolTip="Ouvrir le dossier">
                                <iconPacks:PackIconMaterial Kind="FolderSearch"
                                                            Width="20" Height="20"
                                                            Foreground="#2196F3"/>
                            </Button>
                        </Grid>

                        <Separator Margin="0,0,0,12"/>

                        <!-- Extension -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Kind="FileDocument"
                                                        Width="24" Height="24"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Extension" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding Extension}" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Grid>

                        <!-- Taille -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Kind="DatabaseSettings"
                                                        Width="24" Height="24"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Taille" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding SizeString}" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,12"/>

                        <!-- Date de création -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Kind="CalendarPlus"
                                                        Width="24" Height="24"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Créé le" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding CreationDate}" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Grid>

                        <!-- Date de modification -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <iconPacks:PackIconMaterial Kind="CalendarEdit"
                                                        Width="24" Height="24"
                                                        Foreground="#666666"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Modifié le" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding LastModificationDate}" 
                                           FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons d'action -->
            <UniformGrid Grid.Row="2" Rows="2" Columns="2" HorizontalAlignment="Stretch">
                <!-- Bouton Sélectionner -->
                <Button Command="{Binding SelectDatabaseCommand}"
                        Margin="4"
                        Padding="12"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="FolderSearch"
                                                    Width="32" Height="32"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Sélectionner"
                                   TextAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Créer -->
                <Button Command="{Binding CreateDatabaseCommand}"
                        Margin="4"
                        Padding="12"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="DatabasePlus"
                                                    Width="32" Height="32"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Créer"
                                   TextAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Supprimer -->
                <Button Command="{Binding DeleteDatabaseCommand}"
                        Margin="4"
                        Padding="12"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="{Binding IsConnected}">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="DeleteForever"
                                                    Width="32" Height="32"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Supprimer"
                                   TextAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>

                <!-- Bouton Détails -->
                <Button Command="{Binding ShowDetailsCommand}"
                        Margin="4"
                        Padding="12"
                        Background="#9C27B0"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="{Binding IsConnected}">
                    <StackPanel>
                        <iconPacks:PackIconMaterial Kind="InformationOutline"
                                                    Width="32" Height="32"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,8"/>
                        <TextBlock Text="Détails"
                                   TextAlignment="Center"
                                   FontSize="12"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
