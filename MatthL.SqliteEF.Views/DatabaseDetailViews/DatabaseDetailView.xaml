<UserControl x:Class="MatthL.SqliteEF.Views.DatabaseDetailViews.DatabaseDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatthL.SqliteEF.Views.DatabaseDetailViews"
            xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:MatthL.SqliteEF.Views.Converters" xmlns:converters1="clr-namespace:MatthL.WPF.Essentials.Converters;assembly=MatthL.WPF.Essentials.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="650"
             MinWidth="600">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:ConnectionStateToColorConverter x:Key="StateToColorConverter"/>
            <converters:ConnectionStateToIconConverter x:Key="StateToIconConverter"/>
            <converters:HealthStatusToColorConverter x:Key="HealthToColorConverter"/>
            <converters1:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters1:BoolToInvisibilityConverter x:Key="InverseBoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" 
                Background="{Binding ConnectionState, Converter={StaticResource StateToColorConverter}}"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Kind="DatabaseCog" 
                                            Width="48" Height="48"
                                            Foreground="White"/>

                <StackPanel Grid.Column="1" 
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Détails de la base de données" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding DatabaseName}" 
                               FontSize="14"
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border Background="White"
                            CornerRadius="20"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Visibility="{Binding IsReading, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Read" 
                                                        Width="16" Height="16"
                                                        Foreground="#2196F3"
                                                        Margin="0,0,6,0"/>
                            <TextBlock Text="Lecture" 
                                       FontSize="11"
                                       Foreground="#2196F3"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White"
                            CornerRadius="20"
                            Padding="12,6"
                            Visibility="{Binding IsWriting, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Pencil" 
                                                        Width="16" Height="16"
                                                        Foreground="#FF9800"
                                                        Margin="0,0,6,0"/>
                            <TextBlock Text="Écriture" 
                                       FontSize="11"
                                       Foreground="#FF9800"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu avec ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Carte Santé -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,16"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="HeartPulse" 
                                                            Width="24" Height="24"
                                                            Foreground="#2196F3"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,12,0"/>
                                <TextBlock Text="État de santé" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Command="{Binding CheckIntegrityCommand}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Refresh" 
                                                                Width="14" Height="14"
                                                                Margin="0,0,6,0"/>
                                    <TextBlock Text="Vérifier" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Statut -->
                            <Border Grid.Column="0" 
                                    Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="Statut" 
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="12" Height="12"
                                                 Fill="{Binding HealthStatus, Converter={StaticResource HealthToColorConverter}}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding HealthStatus}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding HealthDescription}" 
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Ping -->
                            <Border Grid.Column="1" 
                                    Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="4,0">
                                <StackPanel>
                                    <TextBlock Text="Temps de réponse" 
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <TextBlock FontSize="20" FontWeight="Bold">
                                        <Run Text="{Binding PingMs, Mode=OneWay}"/>
                                        <Run Text="ms" FontSize="14" Foreground="#666666"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Intégrité -->
                            <Border Grid.Column="2" 
                                    Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Intégrité" 
                                               FontSize="11"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding IntegrityCheck}" 
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LastHealthCheck, StringFormat='Vérifié à {0:HH:mm:ss}'}" 
                                               FontSize="10"
                                               Foreground="#666666"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Carte Statistiques -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,16"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <iconPacks:PackIconMaterial Kind="ChartBox" 
                                                        Width="24" Height="24"
                                                        Foreground="#4CAF50"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,12,0"/>
                            <TextBlock Text="Statistiques" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Utilisation -->
                            <Border Grid.Row="0" Grid.ColumnSpan="2"
                                    Background="#F5F5F5"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <TextBlock Text="Utilisation de l'espace" 
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock HorizontalAlignment="Right"
                                                   FontSize="16"
                                                   FontWeight="Bold">
                                            <Run Text="{Binding UsagePercentage, StringFormat='{}{0:F1}', Mode=OneWay}"/>
                                            <Run Text="%" FontSize="12"/>
                                        </TextBlock>
                                    </Grid>

                                    <ProgressBar Value="{Binding UsagePercentage}"
                                                 Height="8"
                                                 Foreground="#4CAF50"
                                                 Background="#E0E0E0"
                                                 Minimum="0"
                                                 Maximum="100"/>

                                    <Grid Margin="0,8,0,0">
                                        <TextBlock FontSize="11" Foreground="#666666">
                                            <Run Text="Utilisé:"/>
                                            <Run Text="{Binding UsedSize}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Right"
                                                   FontSize="11" 
                                                   Foreground="#666666">
                                            <Run Text="Total:"/>
                                            <Run Text="{Binding TotalSize}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Autres stats -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                <Border Background="#F5F5F5"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Tables" FontSize="11" Foreground="#666666"/>
                                        <TextBlock Text="{Binding TableCount}" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="#F5F5F5"
                                        CornerRadius="8"
                                        Padding="12">
                                    <Grid>
                                        <TextBlock Text="Pages" FontSize="11" Foreground="#666666"/>
                                        <TextBlock Text="{Binding PageCount}" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                <Border Background="#F5F5F5"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <TextBlock Text="Taille page" FontSize="11" Foreground="#666666"/>
                                        <TextBlock FontSize="14" FontWeight="Bold" HorizontalAlignment="Right">
                                            <Run Text="{Binding PageSize, Mode=OneWay}"/>
                                            <Run Text="B" FontSize="11"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <Border Background="#F5F5F5"
                                        CornerRadius="8"
                                        Padding="12">
                                    <Grid>
                                        <TextBlock Text="Pages libres" FontSize="11" Foreground="#666666"/>
                                        <TextBlock Text="{Binding FreePageCount}" 
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Carte Configuration -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,16"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <iconPacks:PackIconMaterial Kind="Cog" 
                                                        Width="24" Height="24"
                                                        Foreground="#FF9800"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,12,0"/>
                            <TextBlock Text="Configuration SQLite" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Journal Mode :" FontWeight="SemiBold" Margin="0,0,0,12" VerticalAlignment="Center"/>
                            <Border Grid.Row="0" Grid.Column="1" Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,0,0,12" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding JournalMode}" Foreground="#1976D2" FontFamily="Consolas"/>
                            </Border>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Busy Timeout :" FontWeight="SemiBold" Margin="0,0,0,12" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BusyTimeout}" Margin="0,0,0,12" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Cache Size :" FontWeight="SemiBold" Margin="0,0,0,12" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CacheSize}" Margin="0,0,0,12" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Synchronous :" FontWeight="SemiBold" Margin="0,0,0,12" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Synchronous}" Margin="0,0,0,12" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Locking Mode :" FontWeight="SemiBold" Margin="0,0,0,12" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding LockingMode}" Margin="0,0,0,12" FontFamily="Consolas"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Foreign Keys :" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Border Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ForeignKeys}" Value="1">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ForeignKeys}" Value="0">
                                                <Setter Property="Background" Value="#F44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{Binding ForeignKeys}" Foreground="White" FontWeight="Bold" FontFamily="Consolas"/>
                                </Border>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Carte Fichiers (uniquement si pas in-memory) -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        Visibility="{Binding IsInMemory, Converter={StaticResource InverseBoolToVisConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <iconPacks:PackIconMaterial Kind="FileMultiple" 
                                                        Width="24" Height="24"
                                                        Foreground="#9C27B0"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,12,0"/>
                            <TextBlock Text="Fichiers" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel>
                            <Border Background="#F5F5F5" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="Fichier principal (.db)" FontSize="12" Foreground="#666666"/>
                                        <TextBlock Text="{Binding FullPath}" FontSize="11" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding MainFileSize}" 
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <Border Background="#F5F5F5" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,8"
                                    Visibility="{Binding WalFileExists, Converter={StaticResource BoolToVisConverter}}">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="Write-Ahead Log (.db-wal)" FontSize="12" Foreground="#666666"/>
                                        <Border Background="#4CAF50" 
                                                CornerRadius="10"
                                                Padding="6,2"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="ACTIF" 
                                                       FontSize="9"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding WalFileSize}" 
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <Border Background="#F5F5F5" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    Visibility="{Binding ShmFileExists, Converter={StaticResource BoolToVisConverter}}">
                                <Grid>
                                    <StackPanel>
                                        <TextBlock Text="Shared Memory (.db-shm)" FontSize="12" Foreground="#666666"/>
                                        <Border Background="#4CAF50" 
                                                CornerRadius="10"
                                                Padding="6,2"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="ACTIF" 
                                                       FontSize="9"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ShmFileSize}" 
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Barre d'actions -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding RefreshAllDataCommand}"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,10"
                            Cursor="Hand"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Refresh" 
                                                        Width="16" Height="16"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Actualiser" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding FlushCommand}"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,10"
                            Cursor="Hand"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="ContentSave" 
                                                        Width="16" Height="16"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Synchroniser" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding OpenFolderCommand}"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            Padding="16,10"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FolderOpen" 
                                                        Width="16" Height="16"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Ouvrir dossier" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#FFF3E0"
                            CornerRadius="4"
                            Padding="12,6"
                            Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Loading" 
                                                        Width="14" Height="14"
                                                        Foreground="#FF9800"
                                                        Margin="0,0,8,0">
                                <iconPacks:PackIconMaterial.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotation" CenterX="7" CenterY="7"/>
                                </iconPacks:PackIconMaterial.RenderTransform>
                                <iconPacks:PackIconMaterial.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                               Storyboard.TargetProperty="Angle"
                                                               From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </iconPacks:PackIconMaterial.Triggers>
                            </iconPacks:PackIconMaterial>
                            <TextBlock Text="Actualisation..." 
                                       FontSize="12"
                                       Foreground="#FF9800"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

