<UserControl x:Class="SQLiteManager.Demo.TestButtonViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLiteManager.Demo"
             xmlns:boolean="clr-namespace:Mechatro.WPF.UI.Converters.Boolean;assembly=Mechatro.WPF.UI.Converters"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             Height="500"
             x:Name="SelectorRoot" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Mechatro.WPF.UI.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <boolean:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <boolean:BoolToInvisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Rows="1">
            <Button Content="Insérer Données"/>
            <Button Content="Récupérer Données"/>
        </UniformGrid>

        <UniformGrid Rows="1" Grid.Row="1">
            <Button Content="dzdz"/>
            <Button Content="Récupérer Données"/>
        </UniformGrid>
    </Grid>
</UserControl>
